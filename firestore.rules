rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Status collection for user presence
    match /status/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Typing status for conversations
    match /typing_status/{conversationId}/{userId} {
      allow read, write: if request.auth != null;
    }
    
    // Users collection - Allow read access for authenticated users
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        (request.auth.uid == userId ||
         (request.auth.token.admin == true));
      
      // Subcollections within users
      match /assignedTasks/{document} {
        allow read, write: if request.auth != null;
      }
      
      match /notifications/{document} {
        allow read: if request.auth != null;
        allow create: if request.auth != null;  // Allow any authenticated user to create notifications
        allow update, delete: if request.auth != null &&
          (request.auth.uid == userId ||
           (request.auth.token.admin == true));
      }
    }
    
    // Tasks collection - Allow all users to create and manage tasks
    match /tasks/{taskId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;  // All authenticated users can create tasks
      allow update, delete: if request.auth != null &&
        (request.auth.token.admin == true ||  // Admins can modify any task
         request.auth.uid == resource.data.createdBy ||  // Task creator can modify
         // Allow assignment fields to be updated by any authenticated user with assignment rights
         (request.resource.data.diff(resource.data).affectedKeys()
            .hasOnly(['assignedTo', 'assignedReporterId', 'assignedCameramanId',
                     'assignedDriverId', 'assignedLibrarianId', 'assignedReporter',
                     'assignedCameraman', 'assignedDriver', 'assignedLibrarian',
                     'assignedName', 'assignmentTimestamp']) &&
          (request.auth.token.admin == true ||
           request.auth.token.role == 'Admin' ||
           request.auth.token.role == 'Assignment Editor' ||
           request.auth.token.role == 'Head of Department' ||
           request.auth.token.role == 'Head of Unit' ||
           request.auth.token.role == 'News Director' ||
           request.auth.token.role == 'Assistant News Director' ||
           request.auth.token.role == 'Producer')));
    }
    
    // Admins collection
    match /admins/{adminId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Conversations collection with subcollections
    match /conversations/{conversationId} {
      allow read, write: if request.auth != null;
      
      // Messages subcollection
      match /messages/{messageId} {
        allow read, write: if request.auth != null;
      }
    }
    
    // News collection - Allow read access for authenticated users
    match /news/{newsId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Dashboard metrics collection - Allow read access for authenticated users
    match /dashboard_metrics/{metricId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}