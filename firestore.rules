rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Check if user has admin role - using exists to avoid errors
    function isAdmin() {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Admin', 'admin', 'superadmin', 'administrator'];
    }

    // Allow users to read their own user document
    function canReadUser(userId) {
      return isAuthenticated() && (isOwner(userId) || isAdmin());
    }

    // Allow users to write their own user document (with restrictions)
    function canWriteUser(userId) {
      return isAuthenticated() && (isOwner(userId) || isAdmin());
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      allow read: if canReadUser(userId);
      allow write: if canWriteUser(userId);
      allow create: if isAuthenticated() && isOwner(userId);
      allow update: if canWriteUser(userId) && 
        (isAdmin() || !('role' in request.resource.data));
    }
    
    // Rules for subcollections of a user
    match /users/{userId}/{collection}/{document=**} {
      allow read, write: if isAuthenticated() && (isOwner(userId) || isAdmin());
    }
    
    // Rules for the 'tasks' collection
    match /tasks/{taskId} {
      // Allow read access based on user role and ownership
      allow read: if isAuthenticated() && (
        isAdmin() || 
        resource.data.createdBy == request.auth.uid ||
        resource.data.createdById == request.auth.uid ||
        resource.data.assignedTo == request.auth.uid
      );
      
      // Allow write access
      allow write: if isAuthenticated() && (
        isAdmin() ||
        request.resource.data.createdBy == request.auth.uid ||
        request.resource.data.createdById == request.auth.uid
      );
      
      // Specific create rules
      allow create: if isAuthenticated() && (
        isAdmin() ||
        request.resource.data.createdBy == request.auth.uid ||
        request.resource.data.createdById == request.auth.uid
      );
      
      // Specific update rules
      allow update: if isAuthenticated() && (
        isAdmin() ||
        resource.data.createdBy == request.auth.uid ||
        resource.data.createdById == request.auth.uid
      );
      
      // Specific delete rules
      allow delete: if isAuthenticated() && (
        isAdmin() ||
        resource.data.createdBy == request.auth.uid ||
        resource.data.createdById == request.auth.uid
      );
    }
    
    // Rules for 'user_settings'
    match /user_settings/{userId} {
      allow read, write: if isAuthenticated() && (isOwner(userId) || isAdmin());
    }
    
    // Rules for 'admins' collection
    match /admins/{adminId} {
      allow read, write: if isAdmin();
    }
    
    // Rules for 'dashboard_metrics'
    match /dashboard_metrics/{metricId} {
      allow read, write: if isAdmin();
    }
    
    // Rules for 'conversations'
    match /conversations/{conversationId} {
      allow read, write: if isAuthenticated() && 
        request.auth.uid in resource.data.participants;
    }
    
    // Rules for 'news'
    match /news/{newsId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Health check collection
    match /_health_check/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}