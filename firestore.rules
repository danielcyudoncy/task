rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPER FUNCTIONS (DEFINED AT TOP LEVEL) ---
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return isAuthenticated() &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in 
          ['Admin', 'admin', 'superadmin', 'administrator'];
    }

    // --- USERS ---
    match /users/{userId} {
      allow get, list: if isAuthenticated();
      allow create, update: if isOwner(userId) || isAdmin();
    }

    // --- USER SUBCOLLECTIONS (e.g., notifications, assignedTasks) ---
    match /users/{userId}/{collection}/{document=**} {
      allow read, write: if isAuthenticated() && (isOwner(userId) || isAdmin());
    }

    // --- TASKS ---
    match /tasks/{taskId} {
      allow read: if isAuthenticated() && (
        isAdmin() ||
        resource.data.createdBy == request.auth.uid ||
        (resource.data.assignedTo == request.auth.uid) ||
        (resource.data.assignedReporterId == request.auth.uid) ||
        (resource.data.assignedCameramanId == request.auth.uid) ||
        (resource.data.assignedDriverId == request.auth.uid) ||
        (resource.data.assignedLibrarianId == request.auth.uid) ||
        (request.auth.uid in resource.data.assignedUserIds)
      );

      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && (
        isAdmin() || resource.data.createdBy == request.auth.uid
      );
    }

    // --- CONVERSATIONS ---
    match /conversations/{conversationId} {
      function isParticipant() {
        return request.auth.uid in resource.data.participants;
      }
      
      allow read, update: if isParticipant();
      allow create: if request.auth.uid in request.resource.data.participants;

      // Rule for subcollections like 'messages'
      match /{document=**} {
        function isParentConversationParticipant() {
          // This check relies on the parent document having a 'participants' array
          return request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
        }

        allow read, create: if isParentConversationParticipant();
        allow update, delete: if request.auth.uid == resource.data.senderId;
      }
    }

    // --- ADMIN & DASHBOARD ---
    match /dashboard_metrics/{metricId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
    
    match /admin/{document} {
      allow read, write: if isAdmin();
    }
    
    match /public_content/{document} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // --- OTHER ---
    match /user_data/{userId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }

    match /test/{document} {
      allow read: if isAuthenticated();
      allow write: if false;
    }
  }
}