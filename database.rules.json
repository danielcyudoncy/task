{
  "rules": {
    "status": {
      "$userId": {
        ".read": "auth != null && auth.uid == $userId",
        ".write": "auth != null && auth.uid == $userId"
      }
    },
    "users": {
      "$userId": {
        ".read": "auth != null",
        ".write": "auth != null && (auth.uid == $userId || auth.token.admin == true)",
        "assignedTasks": {
          ".read": "auth != null && (auth.uid == $userId || auth.token.admin == true)",
          ".write": "auth != null"
        },
        "notifications": {
          ".read": "auth != null && (auth.uid == $userId || auth.token.admin == true)",
          ".write": "auth != null && (auth.uid == $userId || auth.token.admin == true)"
        }
      }
    },
    "tasks": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "admins": {
      ".read": "auth != null",
      ".write": "auth != null && auth.token.admin == true"
    },
    "conversations": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "news": {
      ".read": "auth != null",
      ".write": "auth != null && auth.token.admin == true"
    },
    "dashboard_metrics": {
      ".read": "auth != null",
      ".write": "auth != null && auth.token.admin == true"
    }
  }
}